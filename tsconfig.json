{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "node16",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "*.config.ts",
    "sdk/typescript/src/**/*.ts",
    "sdk/typescript/*.config.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/* 2.ts",
    "**/* 3.ts",
    "sdk/typescript/vitest.config.ts"
  ]
}
